# Stage 1 — build
FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build -- --configuration production

# Stage 2 — serve using a minimal Node static server
FROM node:18-alpine AS runner
WORKDIR /app
RUN npm install -g serve
COPY --from=builder /app/dist/budget-app /app/dist/budget-app
EXPOSE 80
CMD ["serve", "-s", "/app/dist/budget-app", "-l", "80"]